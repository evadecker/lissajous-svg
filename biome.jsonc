{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [
			"**/.DS_Store",
			"**/node_modules",
			"./build",
			"./.svelte-kit",
			"**/.env",
			"**/.env.*",
			"**/pnpm-lock.yaml"
		]
	},
	"formatter": {
		"enabled": true
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"overrides": [{ "include": ["*.svelte"] }]
}
